<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/fl_qube_conversion"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".QubeConversionFragment">
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
		
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:orientation="horizontal">
			
			<ImageView
				android:id="@+id/qube_icon"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:minHeight="75dp"
				android:minWidth="75dp"
				android:src="@drawable/ic_quantumunit_inverted" />
			
			<TextView
				android:id="@+id/tx_qube"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_toEndOf="@+id/qube_icon"
				android:layout_weight="1"
				android:nextFocusLeft="@id/qube_icon"
				android:text="Qube Text" />
			
			<Switch
				android:id="@+id/sw_auto_conversion"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentEnd="true"
				android:layout_centerVertical="true"
				android:checked="true"
				android:text="Auto-conversion" />
		
		</RelativeLayout>
		
		<ListView
			android:id="@+id/lv_fragments"
			android:layout_width="match_parent"
			android:layout_height="match_parent">
		
		</ListView>
	
	</LinearLayout>

</FrameLayout>