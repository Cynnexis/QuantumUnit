<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".QubeEntry">
	
	<!--<com.google.android.gms.plus.PlusOneButton xmlns:plus="http://schemas.android.com/apk/lib/com.google.android.gms.plus"
		android:id="@+id/plus_one_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		plus:annotation="inline"
		plus:size="standard" />-->
	
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		
		<EditText
			android:id="@+id/et_unit"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_toLeftOf="@id/bt_convert"
			android:ems="10"
			android:hint="@string/qube"
			android:inputType="numberDecimal|numberSigned" />
		
		<ImageButton
			android:id="@+id/bt_convert"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:adjustViewBounds="true"
			android:onClick="onConversionRequired"
			android:scaleType="centerInside"
			android:src="@android:drawable/ic_menu_rotate"
			android:text="@string/convert" />
	
	</RelativeLayout>

</FrameLayout>
